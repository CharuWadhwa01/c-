#include <stdio.h>
#include <stdlib.h>
int sub(int num1,int num2);
int main()
{   
    int num1,num2;
    sub(num1,num2);
}
    int sub(int num1,int num2) 
    {
    {
    int *ptr1,*ptr2;    
    int sub;              
    printf("Please enter value for num1: ");    
    scanf("%d",&num1);                           
    printf("Please enter value for num2: ");      
    scanf("%d",&num2);                             
    ptr1=&num1;                                      
    ptr2=&num2;
    sub=*ptr1 - *ptr2;                                 
    printf("Subtraction of the two integer values is: %d",sub);
    } 
    return 0;
    }
